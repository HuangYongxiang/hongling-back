<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/survey_navy" />

    <View style="@style/survey_query_line_h" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:background="@color/survey_popwindow_grey_color"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/task_type_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/survey_menu_text_color"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/task_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="核损完成"
            android:textColor="@color/survey_menu_text_color"
            android:textSize="11sp" />
    </LinearLayout>

    <View style="@style/survey_query_line_h" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="13dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/plate_no_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="京A11111"
            android:textColor="@color/survey_menu_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:text="京A11111"
            android:textColor="@color/survey_menu_text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="2016.08.09"
            android:textColor="@color/survey_report_date_color"
            android:textSize="11sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/report_no_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="5dp"
        android:text="123456789"
        android:textColor="@color/survey_repair_font_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/address_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="5dp"
        android:text="北京市海淀区上地信息路"
        android:textColor="@color/survey_repair_font_color"
        android:textSize="12sp" />

    <View
        style="@style/survey_query_line_h"
        android:layout_marginTop="14dp" />

</LinearLayout>
