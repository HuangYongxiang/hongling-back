<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:layout_marginTop="7dp"
    android:id="@+id/root"
    android:background="@drawable/survey_pocily_list_item_selector"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/insurance_name"
        style="@style/survey_main_item_text"
        android:layout_weight="2" />

    <TextView
        android:id="@+id/insurance_code"
        style="@style/survey_main_item_text"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/franchise_flag"
        style="@style/survey_main_item_text"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/insurance_price"
        style="@style/survey_main_item_text"
        android:layout_weight="1.2" />
</LinearLayout>