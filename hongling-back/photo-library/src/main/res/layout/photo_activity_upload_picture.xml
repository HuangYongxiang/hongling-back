<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/core_white"
        android:orientation="vertical">

        <GridView
            android:id="@+id/gridvew_uploadpicture"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"

            android:gravity="center"
            android:horizontalSpacing="10dp"
            android:numColumns="3"
            android:padding="5dp"
            android:verticalSpacing="10dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/photo_line_1" />

        <LinearLayout
            android:id="@+id/ds_linBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/photo_control_panl"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ds_btnPicDel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:drawableTop="@mipmap/photo_ds_btnpicdel_before"
                android:gravity="center_horizontal"
                android:scaleType="centerInside"
                android:text="删除"
                android:textColor="@color/photo_line_2" />

            <TextView
                android:id="@+id/ds_btn_upload_pic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:drawableTop="@mipmap/photo_upload_icon"
                android:gravity="center_horizontal"
                android:scaleType="centerInside"
                android:text="上传"
                android:textColor="@color/photo_line_2" />
        </LinearLayout>

    </LinearLayout>
</layout>