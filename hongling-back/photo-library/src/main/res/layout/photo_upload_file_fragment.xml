<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/core_white">

    <View style="@style/photo_cut_off_line1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:gravity="center">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:background="@mipmap/photo_camera_autofocus_default"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="照片压缩包"
                android:textColor="@color/core_black"
                android:textSize="15sp"
            />
            <LinearLayout
                android:id="@+id/ll_speed"
                android:layout_above="@+id/progressbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:visibility="gone"
            >
                <TextView
                    android:id="@+id/tv_current_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#999999"
                    android:textSize="15sp"
                />
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KB"
                android:textColor="#999999"
                android:textSize="15sp"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:textColor="#999999"
                    android:textSize="15sp"
                />
                <TextView
                    android:id="@+id/tv_total_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="#999999"
                    android:textSize="15sp"
                />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KB"
                    android:textColor="#999999"
                    android:textSize="15sp"
                />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_detail"
                android:layout_above="@+id/progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="#999999"
                android:textSize="15sp"
                android:text="@string/photo_wait_upload"
            />
            <ProgressBar
                android:id="@+id/progressbar"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="3dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:progressDrawable="@drawable/photo_progressbar_style"
                android:progress="0"
                android:max="100"
            />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
