<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/core_white_corner_bg"
    android:orientation="vertical">

    <include
        android:id="@+id/header_layout"
        layout="@layout/core_dialog_header_layout" />

    <View style="@style/core_cut_off_line_h" />

    <TextView
        android:id="@+id/tip_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="13sp"
        android:gravity="center"
        android:textColor="@color/core_text_color_333333"
       ></TextView>

    <include
        android:id="@+id/bottom_layout"
        layout="@layout/core_dialog_sure_footer_layout" />

</LinearLayout>
